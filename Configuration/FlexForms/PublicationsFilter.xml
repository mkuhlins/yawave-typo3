<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Filter</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <!-- Filter by Categorie -->
                    <settings.filter_by_categorie>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Kategorie</label>
                            <config>
                                <type>select</type>
                                <renderType>selectTree</renderType>
                                <foreign_table>tx_yawavepublications_domain_model_category</foreign_table>
                                <foreign_table_where>ORDER BY tx_yawavepublications_domain_model_category.name ASC
                                </foreign_table_where>
                                <treeConfig>
                                    <parentField>parent</parentField>
                                    <appearance>
                                        <expandAll>true</expandAll>
                                        <showHeader>true</showHeader>
                                    </appearance>
                                </treeConfig>
                            </config>

                        </TCEforms>
                    </settings.filter_by_categorie>
                    
                    <!-- Filter Art -->
                    <settings.publicationFilterArt>
                        <TCEforms>
                            <label>Filter-Art</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0">
                                        <numIndex index="0">OR</numIndex>
                                        <numIndex index="1">or</numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">AND</numIndex>
                                        <numIndex index="1">and</numIndex>
                                    </numIndex>
                                    
                                    <numIndex index="2">
                                        <numIndex index="0">AND/OR</numIndex>
                                        <numIndex index="1">and_or</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.publicationFilterArt>
                    
                    <!-- Template Layouts -->
                    <settings.templateLayouts>
                        <TCEforms>
                            <label>Template Key Indikator (templateLayouts)</label>
                            <config>
                                <type>select</type>
                                <itemsProcFunc>Interspark\YawavePublications\Hooks\ItemsProcFunc->user_templateLayout</itemsProcFunc>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0"></numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.templateLayouts>

                    <!-- Limit -->
                    <settings.limit>
                        <TCEforms>
                            <label>Max. angezeigte Datens√§tze</label>
                            <config>
                                <type>input</type>
                                <size>5</size>
                                <eval>num</eval>
                            </config>
                        </TCEforms>
                    </settings.limit>

                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>